{
  "env": {
    "browser": false,
    "es6": true,
    "node": true
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "tsconfig.json",
    "sourceType": "module",
    "ecmaVersion": 2020
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "rules": {
    "@typescript-eslint/explicit-function-return-type": "warn",
    "max-len": [
      "error",
      {
        "code": 105,
        "ignoreStrings": true,
        "ignoreTemplateLiterals": true
      }
    ],
    "indent": ["error", "tab"],
    "semi": ["error", "never"]

  }
}
